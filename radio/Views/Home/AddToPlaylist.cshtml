@model radio.ViewModels.IndexViewModel

@{
    ViewBag.Title = "AddToPlaylist";
}

<div class="main-panel">

    <div class="content">
        <div class="container">
            <div class="row">
                <div class="card">
                    <div class="content">
                        <div class="header">
                            <h4 class="title">Edit</h4>
                            <p class="category">

                            </p>
                        </div>
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @if (Model.ID != null)
                                {
                                    @Html.HiddenFor(model => model.ID)
                                    @Html.HiddenFor(model => model.duration)
                                    @Html.HiddenFor(model => model.location)
                                    @Html.HiddenFor(model => model.artist)
                                    @Html.HiddenFor(model => model.album)
                                    @Html.HiddenFor(model => model.tracknumber)
                                    @Html.HiddenFor(model => model.title)
                                    @Html.HiddenFor(model => model.genre)
                                }
                                else
                                {
                                    @Html.HiddenFor(model => model.artist)
                                    @Html.HiddenFor(model => model.album)
                                }

                                <div class="form-group">
                                    @Html.Label("Add to Playlist:", htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Art, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Art, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Save" class="btn btn-info btn-lg btn-block btn-fill" />
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
                <div>
                    @Html.ActionLink("Back", "Details", new { id = Model.ID }, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

}









