@model radio.ViewModels.IndexViewModel

@{
    ViewBag.Title = "Home Page";
}
@using PagedList.Mvc;
@using PagedList;

    

    <div class="row panel">
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                <div class="form-inline">
                    @Html.TextBox("searchString", null, new { @class = "form-control" })
                    <input class="btn btn-default" type="submit" value="Search" />
                </div>
            }
            <br />
            <div class="row">
                @foreach (var item in Model.indexview)
                {
                    if (File.Exists(@"\\51-DBA\radio\image\" + item.artist + ".jpg"))
                    {
                        var image = item.artist + ".jpg";
                        <div class="col-sm-2" style="height:250px">
                            <a href="@Url.Action("Catalog", "Home", new { artist = item.artist })"><img style="max-width:100%;height:150px;" src="~/image/@image" alt="@item.artist" title="@item.artist"></a>
                            <small><br />@item.artist</small>
                        </div>
                    }
                    else if (File.Exists(@"\\51-DBA\radio\image\" + item.artist + ".png"))
                    {
                        var image = item.artist + ".png";
                        <div class="col-sm-2" style="height:250px">
                            <a href="@Url.Action("Catalog", "Home", new { artist = item.artist })"><img style="max-width:100%;height:150px;" src="~/image/@image" alt="@item.artist" title="@item.artist"></a>
                            <small><br />@item.artist</small>
                        </div>
                    }
                    else if (File.Exists(@"\\51-DBA\radio\image\" + item.artist + ".bmp"))
                    {
                        var image = item.artist + ".bmp";
                        <div class="col-sm-2" style="height:250px">
                            <a href="@Url.Action("Catalog", "Home", new { artist = item.artist })"><img style="max-width:100%;height:150px;" src="~/image/@image" alt="@item.artist" title="@item.artist"></a>
                            <small><br />@item.artist</small>
                        </div>
                    }
                    else if (item.Art != null)
                    {
                        <div class="col-sm-2" style="height:250px">
                            <a href="@Url.Action("Catalog", "Home", new { artist = item.artist })"><img style="max-width:100%;max-height:150px;" src="data:image/png;base64,@item.Art" alt="@item.artist" title="@item.artist"></a>
                            <small><br />@item.artist</small>
                        </div>
                    }
                    else
                    {
                        <div class="col-sm-2" style="height:250px">
                            <a href="@Url.Action("Catalog", "Home", new { artist = item.artist })"><img style="max-width:100%;max-height:150px" src="~/image/No_image_available.svg" alt="@item.artist" title="@item.artist"></a>
                            <small><br />@item.artist</small>
                        </div>
                    }
                }
            </div>
        </div>
    </div>







    @Html.PagedListPager((IPagedList)ViewBag.OnePageOfProducts, page => Url.Action("Index", new { page }))



@section Scripts{

}